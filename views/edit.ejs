<% layout('boilerplate') -%>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-3">Edit Post</h1>
            <form action="/posts/<%= post._id %>?_method=put" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input class="form-control" id="title" name="title" type="text" value="<%= post.title %>">
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content:</label>
                    <textarea class="form-control" id="content" name="content" rows="10"><%= post.content %></textarea>
                </div>
                <button class="btn btn-success mt-3">Update</button>
            </form>
            <br>
            <a href="/posts/<%= post._id %>">Back to Post</a>
        </div>
    </div>
</div>